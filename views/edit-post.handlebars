<div class="post card">
    <h2 class="card-header">Edit Post</h2>
    <form id="edit-post-form" class="card-body">
      <input type="hidden" name="post-id" value="{{post.id}}">
      <div>
        <label for="post-title" class="form-label">Title</label>
        <input type="text" class="form-input" name="post-title" value="{{post.title}}" />
      </div>
      <div>
        <label for="post-body" class="form-label">Content</label>
        <textarea name="post-body" class="form-input form-textarea">{{post.body}}</textarea>
      </div>
      <button type="submit" class="btn" >Update Post</button>
      <button type="button" id="delete-btn" class="btn" >Delete</button>
    </form>  
</div>

<script src="/js/edit.js"></script>