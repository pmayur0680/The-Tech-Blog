<div class="post card">
  <div class="card-header">
        <div class="flex-row justify-space-between">
        <div class="flex-column link-hand post-title">
        {{post.title}}
        </div>
        <div class="flex-column post-description">
        Posted by {{post.User.username}} on {{format_date post.createdAt}}
        </div>
    </div>   
    </div>
    <div class="card-body">{{post.body}}</div>
</div>
<div class="post card">
    <h2 class="card-header"></h2>
    <form id="new-comment-form" class="card-body"> 
        <input type="hidden" name="post-id" value="{{post.id}}">     
      <div>
        <label for="post-body" class="form-label">Comment</label>
        <textarea name="comment-body" class="form-input form-textarea"></textarea>
      </div>
      <button type="submit" class="btn" >Create Post</button>
    </form>  
</div>
<script src="/js/comment.js"></script>